@page "{userId:int}"
@using Run4Cause.Pages
@model ProfileModel

<div class="flex flex-col px-6 py-4 space-y-4" x-data="{ open: false }">
    <div class="flex items-center space-x-4">
        <div class="flex flex-shrink-0 w-24 h-24 bg-gray-300 rounded-full"></div>
        <div class="w-2/3 space-y-4">
            <div class="flex items-center">
                <h1 class="mr-4 text-2xl font-bold">@Html.DisplayFor(model => model.User.FullName)</h1>
                <button class="p-0.5 flex items-center justify-center rounded-md active:bg-gray-100 border-0"
                    @@click="open = true">
                    <img src="/img/edit.svg" class="w-8 h-8">
                </button>
            </div>
            <p class="mr-4 text-justify">@Html.DisplayFor(model => model.User.Profile.Description)</p>
        </div>
    </div>
    <hr>
    <div>
        <div class="flex space-x-2">
            <div class="flex flex-col justify-between py-1.5 px-2 bg-green-200 rounded-lg">
                <div class="text-green-900">Distance totale</div>
                <div class="flex text-green-600">
                    <span class="font-bold">@Html.DisplayFor(model => model.User.TotalDistanceCovered)</span>
                    <span>km</span>
                </div>
            </div>
            <div class="flex flex-col justify-between py-1.5 px-2 bg-green-200 rounded-lg">
                <div class="text-green-900">Gains</div>
                <div class="flex text-green-600">
                    <span class="font-bold">4'345</span>
                    <span>CHF</span>
                </div>
            </div>
            <div class="flex flex-col justify-between py-1.5 px-2 bg-green-200 rounded-lg">
                <div class="text-green-900">Parrains</div>
                <div class="flex text-green-600">
                    <span class="font-bold">54</span>
                </div>
            </div>
        </div>
    </div>

    <div class="space-y-4">
        <h1 class="text-2xl font-bold">Prochaine participation</h1>
        <div class="flex items-center space-x-5 md:items-start">
            <div class="w-2/5 space-y-2.5">
                <div class="flex items-center space-x-3">
                    <img src="/img/icon_markers.png" alt="" class="w-8 h-8">
                    <div>12 km</div>
                </div>
                <div class="flex items-center space-x-3">
                    <img src="/img/icon_mountains.png" alt="" class="w-8 h-8">
                    <div>120 m</div>
                </div>
                <hr>
                <div class="flex items-center space-x-3">
                    <img src="/img/icon_calendar.png" alt="" class="w-8 h-8">
                    <div>Le 15 juin</div>
                </div>
                <div class="flex items-center space-x-3">
                    <img src="/img/icon_clock.png" alt="" class="w-8 h-8">
                    <div>Départ à 10h00</div>
                </div>
            </div>
            <div class="flex-1 w-3/5">
                <img src="/img/map.png" alt="" class="w-full rounded-3xl">
            </div>
        </div>
    </div>

    <div class="space-y-4">
        <h1 class="text-2xl font-bold">Trophées</h1>
        <div class="flex space-x-4">
            <div class="flex flex-col items-center space-y-4">
                <img src="/img/trophy_1.png" alt="" class="w-16 h-16">
                <div>Participant 2018</div>
            </div>
            <div class="flex flex-col items-center space-y-4">
                <img src="/img/trophy_2.png" alt="" class="w-16 h-16">
                <div>Participant 2019</div>
            </div>
        </div>
    </div>

    <div class="flex flex-col space-y-4">
        <h1 class="text-2xl font-bold">Photos</h1>
        <div class="flex flex-1">
            <img src="/img/gallery_1.png" alt="" class="w-full rounded-3xl">
        </div>
    </div>

    <div class="fixed bottom-0 pb-4 -translate-x-1/2 left-1/2 md:hidden">
        <button class="px-8 py-3 text-white bg-green-500 rounded-full">
            <span>Parrainer</span>
        </button>
    </div>

    <div class="z-10" x-show="open" x-cloak>
        <div class="fixed top-0 left-0 w-full h-full bg-black opacity-40" @@click="open = false"></div>
        <div class="fixed top-0 w-full -translate-x-1/2 left-1/2">
            <form class="relative flex flex-col px-8 py-6 m-8 space-y-2 bg-white rounded-lg" method="POST">
                <h1 class="mb-4 text-2xl font-bold">Modifier le profil</h1>

                <label class="text-lg" for="FirstName">Prénom</label>
                <input id="FirstName" name="FirstName" asp-for="User.FirstName" class="p-2 border rounded-md" required />

                <label class="text-lg" for="LastName">Nom</label>
                <input id="LastName" name="LastName" asp-for="User.LastName" class="p-2 border rounded-md" required />

                <label class="text-lg" for="Description">Description</label>
                <textarea id="Description" name="Description" asp-for="User.Profile.Description" cols="30" rows="5"
                    class="p-2 border rounded-md" required></textarea>

                <div class="flex justify-end pt-4 space-x-4">
                    <button class="px-4 py-2 text-gray-600 bg-gray-200 border rounded-md">Annuler</button>
                    <button class="px-4 py-2 text-white bg-green-500 rounded-md" type="submit">Valider</button>
                </div>
                <button class="absolute top-2 right-4" type="button" @@click="open = false">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd"
                            d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                            clip-rule="evenodd" />
                    </svg>
                </button>
            </form>
        </div>
    </div>
</div>